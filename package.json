{
  "name": "sideuniverse",
  "version": "1.0.0",
  "description": "project developed from scratch based on https://www.tabnews.com.br",
  "main": "index.js",
  "scripts": {
    "dev": "node infra/scripts/run-dev-with-cleanup.js",
    "dev:run": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "4.1.5",
    "@types/async-retry": "1.4.9",
    "@types/react": "19.1.2",
    "@vercel/analytics": "1.1.0",
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "ora": "8.0.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/css-modules": "1.0.5",
    "@types/jest": "29.5.12",
    "@types/node": "18.19.87",
    "autoprefixer": "10.4.21",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "postcss": "8.5.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
